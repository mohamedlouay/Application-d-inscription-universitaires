<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedMatiereActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="matiere selectionnÃ© :"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:layout_gravity="center"
            />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/selectedMatiere"
        android:layout_width="wrap_content"
        android:layout_height="3in"
        android:layout_centerInParent="true"
        android:layout_gravity="center|end"
        android:text="nom_matiere"
        android:textColor="@color/headerColor"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:textSize="16sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="code_matiere"
            android:padding="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/headerColor"/>


        <TextView
            android:id="@+id/semestre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="semestre"
            android:padding="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/headerColor"/>






        <TextView
            android:id="@+id/discipline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="discipline"
            android:padding="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/headerColor"/>


        <TextView
            android:id="@+id/ECTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ECTS"
            android:padding="16dp" android:textAppearance="?android:attr/textAppearanceMedium"

            android:textColor="@color/headerColor"/>


        <TextView
            android:id="@+id/nb_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nb_place"
            android:padding="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:textColor="@color/headerColor"/>











    </LinearLayout>





</RelativeLayout>
